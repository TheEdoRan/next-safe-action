		"@types/node": "^20.11.5",
		"@types/react": "^18.2.48",
		"@typescript-eslint/eslint-plugin": "^6.19.0",
		"@typescript-eslint/parser": "^6.19.0",
		"eslint": "^8.56.0",
		"eslint-config-prettier": "^9.1.0",
		"next": "14.1.0",
