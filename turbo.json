{
	"$schema": "https://turbo.build/schema.json",
	"ui": "tui",
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"outputs": [".next/**", "!.next/cache/**", "dist/**", "build/**"]
		},
		"test": {},
		"lint": {},
		"deploy": {
			"dependsOn": ["build", "lint"],
			"env": ["NPM_TOKEN", "GITHUB_TOKEN"]
		},
		"dev": {
			"cache": false,
			"persistent": true
		}
	}
}
